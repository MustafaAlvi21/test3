    <body style="font-family: 'Roboto';  background-color: #ffffff">
    <!--  s t a r t   o f    f o r m   -->
    <br> <br>   <br>
    <div class="mx-auto" >
      <div class="row mx-auto" >
        <div class="loginbox mx-auto col-lg-5 col-sm-7 mx-auto" style="background-color: antiquewhite; margin: 15px auto; border-radius: 20px;">
          <center>
            <h1>  Need Blood Donation  </h1>
    
          </center>
                 <form onsubmit="return ValidationEvent()" style="border-top: grey 2px  groove;" action="/need-blood" id="passwordForm" method="POST">
                    <% if(msg != ''){ %>
                      <br>
                      <div class="alert alert-success alert-dismissible">
                        <strong>      
                    <%= msg %>
                        </strong>
                    </div>
                      <% } %>
                    <br>
                    <div class="mb-3">
                      <label for="validationServerUsername">Blood Group</label>
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroupPrepend3"><span class="glyphicon  glyphicon-star-empty"></span> </span>
                        </div>
                        <select id="options" class="form-control" name="Blood_Group" required style="height: 30px;">
                            <option selected>Select Blood Group</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                          </select>
                        <div class="invalid-feedback">
                          Please enter correct password.
                        </div>
                      </div>
                    </div>

                    <div class="mb-3">
                      <label for="validationServerUsername">Blood Cell</label>
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroupPrepend3"><span class="glyphicon glyphicon-envelope"></span> </span>
                        </div>
                        <input type="text" class="form-control " required name="Blood_Cell" placeholder="like: 50, 500, 5000" aria-describedby="inputGroupPrepend3" >
                        <div class="invalid-feedback">
                          Enter category of password.   
                        </div>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="validationServerUsername">Weight</label>
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroupPrepend3"><span class="glyphicon glyphicon-envelope"></span> </span>
                        </div>
                        <input type="text" class="form-control " required name="Weight" placeholder="Enter weight in KG" aria-describedby="inputGroupPrepend3" >
                        <div class="invalid-feedback">
                          Enter category of password.   
                        </div>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="validationServerUsername">Height</label>
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroupPrepend3"><span class="glyphicon glyphicon-envelope"></span> </span>
                        </div>
                        <input type="text" class="form-control " required name="Height" placeholder="Enter height in cm" aria-describedby="inputGroupPrepend3" >
                        <div class="invalid-feedback">
                          Enter category of password.   
                        </div>
                      </div>
                    </div>
                    <br>
                      <div class="col">
                          <button class="btn1 btn btn-lg btn-block" type="submit" value="Add categore">S u b m i t</button>
                      </div>
                      <br>
                      <br>
                    </form>
                  
                </div>
                </div>
              </div>
